server {
	listen 80 default_server;
	#listen 443 ssl default_server;
	server_name dazzling.pe.kr;

	client_max_body_size 16m;

	root /usr/share/nginx/www;
	index index.html index.htm;

	# Redirect 'all' HTTP requets to HTTPS
	#if ($scheme = http) {
	#	return 302 https://$server_name$request_uri;
	#}

	location / {
		# First attempt to serve request as file, then
		# as directory, then fall back to index.html
		#try_files $uri $uri/ /index.html;
		include uwsgi_params;
		uwsgi_pass unix:///tmp/django-dazzling.sock;
		#uwsgi_pass 127.0.0.1:3031;
	}

	location /static {
		alias /dazzling/static;
		autoindex off;
	}
	location /media {
		alias /dazzling/attachments;
		autoindex off;
	}
	location /favicon.ico {
		alias /dazzling/favicon.ico;
	}
}

# vim: set ft=nginx noexpandtab:
